<div class="col-md-12">
    <form action="@Url.Action("aracEkle","Arac",new {sirketId=Session["sirketId"]})" method="post" enctype="multipart/form-data">
        <div class="form-row">
            <div class="form-group col-md-6">
                
                <input type="text" class="form-control" placeholder="Araç Markası" aria-describedby="basic-addon1" name="marka">
            </div>
            <div class="form-group col-md-6">
                <input type="text" class="form-control" placeholder="Araç Modeli" aria-describedby="basic-addon1" name="model">
            </div>
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Araç Açıklama " aria-describedby="basic-addon1" name="aciklama">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" placeholder="Araç Kasa Tipi " aria-describedby="basic-addon1" name="aracKasaTipi">
        </div>
        <div class="form-row">
            <div class="form-group col-md-5">
                <input type="text" class="form-control" placeholder="Araç Airbag Durumu " aria-describedby="basic-addon1" name="airbagDurumu">
            </div>
            <div class="form-group col-md-5">
                <input type="text" class="form-control" placeholder="Araç Koltuk Sayısı " aria-describedby="basic-addon1" name="koltukSayi">
            </div>
            <div class="form-group col-md-2">
                <input type="text" class="form-control" placeholder="Araç Km " aria-describedby="basic-addon1" name="aracKm">
            </div>
            <div class="form-group col-md-4">
                <input type="text" class="form-control" placeholder="Araç Günlük Fiyat " aria-describedby="basic-addon1" name="fiyat">
            </div>
            
            <div class="form-group col-md-4">
                <input type="text" class="form-control" placeholder="Minimum Sürücü Yaşı " aria-describedby="basic-addon1" name="minSurucuYasi">
            </div>
            <div class="form-group col-md-4">
                <input type="text" class="form-control" placeholder="Minimum Ehliyet Yaşı " aria-describedby="basic-addon1" name="minEhliyetYasi">
            </div>
            <div class="form-group col-md-4">
                <input type="text" class="form-control" placeholder="Fotoğraf Url " aria-describedby="basic-addon1" name="fotoUrl">
            </div>

            <div class="form-group col-md-4">
                <input type="text" class="form-control" placeholder="Günlük Km Sınır " aria-describedby="basic-addon1" name="gunlukKmSinir">
            </div>
        </div>

       
        <button type="submit" value="Aracı Ekle" class="btn btn-outline-primary"></button>
    </form>
</div>
    