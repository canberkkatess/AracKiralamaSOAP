@model  AracKiralama.WebMvc.SoapService.tblArac
    @{
        ViewBag.Title = "urunGetir";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }

    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav">
                <li class="nav-item active">
                    <a href="/Anasayfa/Anasayfa"  class="nav-link">Ana Sayfa</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">Profilim</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link">Çıkış Yap</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="row mt-5" *ngFor="let araba of arabalar; let i=index">
        <div class=" col-md-7">
            <div class="card w-100" style="width: 18rem;">
                <img class="card-img-top" src="http://www.ilgincgercek.com/wp-content/uploads/2018/05/ilginc-araba.jpg" alt="Card image cap">
                <div class="card-body">
                    <h5 class="card-title">@Model.aracMarka @Model.aracModel </h5>
                    <p class="card-text"> @Model.aracAciklama</p>
                </div>
            </div>

        </div>
        <div class="col-md-5">
            <ul>
                <li>Minimum Ehliyet Yaşı: @Model.minEhliyetYasi </li>
                <li>Minimum Sürücü Yaşı: @Model.minSürücüYasi </li>
                <li>Günlük Km Sınırı: @Model.günlükKmSiniri </li>
                <li>Araç Kilometresi: @Model.aracKmsi </li>
                <li>Koltuk Sayısı: @Model.koltukSayisi </li>
                <li>Yakıt Türü: @Model.yakitTürü </li>
                <li>Airbag Durumu: @Model.airbagDurumu </li>
                <li>Araç Kasa Tipi:@Model.aracKasaTipi </li>
            </ul>
            <form action="@Url.Action("kiralamaTalep","Talep",new {@kullaniciId=Session["kullaniciId"],@aracId=Model.aracID })" method="post">
                <button type="submit" class="btn btn-danger" id="urun_sayfasi_btn1">
                    Kiralama Talep Gönder
                </button>
            </form>
        </div>


    </div>

